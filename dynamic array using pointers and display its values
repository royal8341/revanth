#include <iostream>
using namespace std;

int main() {
    int size;
    cout << "Enter the size of the array: \n";
    cin >> size;

    int *arr = new int[size];

    cout << "Enter " << size << " elements in the array: \n";
    for(int i=0; i<size; i++) {
        cin >> arr[i];
    }

    cout << "Elements in the array are: \n";
    for(int i=0; i<size; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}
